<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cesed.br.protocolo.MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Escolha uma das opções:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/btn_academico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Solicitação ao controle academico"/>

    <Button
        android:id="@+id/btn_coordenacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Soliciação a coordenação de curso"/>

    <Button
        android:id="@+id/btn_administracao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Solicitação a administração"/>
</LinearLayout>
